<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/button_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Select Left Connector"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_left_connector"
            android:background="@android:drawable/btn_dropdown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Right Angle"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_right_angle_left"
            android:background="@android:drawable/btn_dropdown"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Head Type 1"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_head_type_1_left"
            android:background="@android:drawable/btn_dropdown"
            android:prompt="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Head Type 2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_head_type_2_left"
            android:background="@android:drawable/btn_dropdown"
            android:prompt="@string/app_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reverse Polarity"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_reverse_polarity_left"
            android:background="@android:drawable/btn_dropdown"
            android:prompt="@string/app_name"/>
    </LinearLayout>
</ScrollView>
