<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_shape">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:id="@+id/txt_address_shipping"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:inputType="textPostalAddress"
            android:textSize="20dp"
            android:hint="address please"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:text="City"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:id="@+id/txt_city_shipping"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:inputType="textPostalAddress"
            android:textSize="20dp"
            android:hint="City Please"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:textColor="@android:color/black"
            android:text="State"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:id="@+id/state_shipping"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@drawable/text"
            android:text="Zip Code"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_light_frame"
            android:id="@+id/txt_zip_shipping"
            android:gravity="center"
            android:inputType="numberSigned"
            android:numeric="integer"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:hint="Zip Code Please"/>
    </LinearLayout>

</ScrollView>


























